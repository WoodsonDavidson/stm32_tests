/* USER CODE BEGIN 4 */
void VAL_TO_NUMS_ARR(uint16_t *value, uint8_t arr[]){
	arr[0] = *value / 1000;
	arr[1] = (*value % 1000) / 100;
	arr[2] = ((*value % 1000) % 100) / 10;
	arr[3] = ((*value % 1000) % 100) % 10;
}




void NUM_TO_ASCII(uint8_t *num, uint8_t *num_ascii){
	switch (*num){
		case 0:
			*num_ascii = 48;
			break;
		case 1:
			*num_ascii = 49;
			break;
		case 2:
			*num_ascii = 50;
			break;
		case 3:
			*num_ascii = 51;
			break;
		case 4:
			*num_ascii = 52;
			break;
		case 5:
			*num_ascii = 53;
			break;
		case 6:
			*num_ascii = 54;
			break;
		case 7:
			*num_ascii = 55;
			break;
		case 8:
			*num_ascii = 56;
			break;
		case 9:
			*num_ascii = 57;
			break;
	}
}
/* USER CODE END 4 */

